<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rlHeaderCalendar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="@dimen/dateTitlePaddingBottom">


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imgVNavLeft"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:rotation="180"
        android:src="@drawable/ic_selector" />

    <com.archit.calendardaterangepicker.customviews.CustomTextView
        android:id="@+id/tvYearTitle"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:tag="dateTitle"
        android:text="FEBRUARY 2014"
        android:textSize="@dimen/text_size_title" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imgVNavRight"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="2dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_selector" />


</RelativeLayout>